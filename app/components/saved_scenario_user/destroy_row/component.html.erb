<%= turbo_frame_tag @user do %>
  <div class="grid grid-cols-4 gap-5 w-full transition mb-5 p-2 pr-4 rounded-md">
    <%# GRID COL 1 %>
    <div class="flex flex-col">
      <% if @confirmed %>
        <span><%= @user.name %></span>
        <div class="text-sm text-midnight-400">
          <span><%= @user.email %></span>
        </div>
      <% else %>
        <span><%= @user.email %></span>
        <div class="text-sm text-midnight-400">
          <span><%= t(".invite_sent") %></span>
        </div>
      <% end %>
    </div>

    <%# GRID COL 2 + 3 %>
    <span class="text-red-600 col-span-2 text-sm mt-3">
        <%= t('saved_scenario_users.confirm_destroy.warning', role: "#{t("saved_scenario_users.roles.#{User::Roles.name_for(@user.role_id).to_s}")}") %>
    </span>


    <%# GRID COL 4 %>
    <div class="flex mt-2 text-midnight-400">
      <span class="mr-0 ml-auto flex gap-2">
          <%= button_to t('saved_scenario_users.confirm_destroy.confirm'), @path, class: button_classes("transition text-sm", color: :warning), method: :delete, data: {}  %>
          <%= button_to t('saved_scenario_users.confirm_destroy.cancel'), @path, class: button_classes("transition text-sm"), method: :get %>
      </span>
    </div>
  </div>
<% end %>
