<% if @selected %>
  <div
    class="
      flex
      ml-auto
      mr-0
      cursor-pointer
      items-center
      whitespace-nowrap
      outline-0
      pointer-events-none
      text-midnight-800
      first:mb-2
    "
    href="#"
    role="menuitem"
    aria-disabled="true"
  >
    <%= content %>
  </div>
<% else %>
  <a
    role="menuitem"
    href="<%= @href %>"
    class="
      flex
      ml-auto
      mr-0
      cursor-pointer
      border-0
      !outline-none
      !text-midnight-450
      hover:!text-midnight-800
      hover:underline
      first:mb-2
    "
  >
    <%= content %>
  </a>
<% end %>
