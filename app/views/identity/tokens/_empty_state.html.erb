<%= render(Identity::EmptyStateComponent.new(title: t('.title'))) do |es| %>
  <%= format_paragraphs(t('.message')) %>

  <% es.buttons do %>
    <%= link_to new_identity_token_path, class: button_classes(color: :success, size: :lg) do %>
      <%= t('identity.tokens.index.create_token') %>
    <% end %>

    <%= link_to 'https://docs.energytransitionmodel.com/api/authentication', target: '_blank', class: button_classes(size: :lg) do %>
      <%= t('identity.tokens.index.learn_more') %>
    <% end %>
  <% end %>
<% end %>
