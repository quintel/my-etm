<% content_for :block_right do %>
  <%= render(Identity::SidebarItemComponent.new(
    path: identity_profile_path,
    title: t('identity.settings.index.title'),
    explanation: t('identity.settings.index.explanation'),
    active: controller_name == 'settings'
  )) %>

  <%= render(Identity::SidebarItemComponent.new(
    path: identity_tokens_path,
    title: t('identity.tokens.index.title'),
    explanation: t('identity.tokens.index.explanation'),
    active: controller_name == 'tokens'
  )) %>

  <%= render(Identity::SidebarItemComponent.new(
    path: oauth_authorized_applications_path,
    title: t('identity.authorized_applications.index.title'),
    explanation: t('identity.authorized_applications.index.explanation'),
    active: controller_name == 'authorized_applications'
  )) %>
<% end %>
