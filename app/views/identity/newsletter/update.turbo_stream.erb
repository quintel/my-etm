<turbo-stream action="replace" target="<%= @audience.to_s %>">
  <template>
    <%= render(Identity::NewsletterStatusRowComponent.new(subscribed: @subscribed, audience: @audience)) %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="toast">
  <template>
    <% if @subscribed %>
      <%= render(ToastComponent.new(
        type: :notice,
        message: I18n.t("identity.settings.#{@audience}_subscribed")
      )) %>
    <% else %>
      <%= render(ToastComponent.new(
        type: :notice,
        message: I18n.t("identity.settings.#{@audience}_unsubscribed")
      )) %>
    <% end %>
  </template>
</turbo-stream>
