= form_with(model: saved_scenario) do |form|
  - if saved_scenario.errors.any?
    %div{style:"color: red"}
      %h2= "unable to save: #{pluralize(saved_scenario.errors.count, "error")}"

      %ul
        - saved_scenario.errors.each do |error|
          %li= error.full_message

  %div
    = form.label :scenario_id
    = form.number_field :scenario_id

  %div
    = form.label :scenario_id_history
    = form.text_area :scenario_id_history

  %div
    = form.label :title
    = form.text_field :title

  %div
    = form.label :description
    = form.text_area :description

  %div
    = form.label :area_code
    = form.text_field :area_code

  %div
    = form.label :end_year
    = form.number_field :end_year

  %div
    = form.label :private
    = form.check_box :private

  %div
    = form.label :created_at
    = form.datetime_field :created_at

  %div
    = form.label :updated_at
    = form.datetime_field :updated_at

  %div
    = form.label :discarded_at
    = form.datetime_field :discarded_at

  %div
    = form.submit
