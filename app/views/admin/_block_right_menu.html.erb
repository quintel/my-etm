<% content_for :block_right do %>
  <%= render(SavedScenarios::NavItem::Component.new(
    path: admin_path,
    title: t('admin.bar.general'),
    icon: 'information-circle',
    active: controller_name == 'users' && action_name =='org')
  )%>
  <%= render(SavedScenarios::NavItem::Component.new(
    path: admin_users_path,
    title: t('admin.bar.users'),
    icon: 'user-group',
    active: controller_name == 'users' && action_name =='all')
  )%>
  <%= render(SavedScenarios::NavItem::Component.new(
    path: admin_saved_scenarios_path,
    title: t('admin.bar.scenarios'),
    icon: 'adjustments-horizontal',
    active: controller_name == 'saved_scenarios')
  )%>
  <%= render(SavedScenarios::NavItem::Component.new(
    path: admin_collections_path,
    title: t('admin.bar.collections'),
    icon: 'chart-bar-square',
    active: controller_name == 'collections')
  )%>
  <%= render(SavedScenarios::NavItem::Component.new(
    path: admin_applications_path,
    title: t('admin.bar.applications'),
    icon: 'computer-desktop',
    active: controller_name == 'staff_applications')
  )%>

  <% if content_for?(:block_right_sub_menu)%>
    <div class="border-l lg:border-l-0 lg:border-t flex flex-col border-solid border-gray-200 pr-5 lg:pr-0 lg:mt-10 lg:pt-10">
    <%= yield :block_right_sub_menu %>
    </div>
  <% end %>
<% end %>
