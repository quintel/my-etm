<% content_for :block_right_sub_menu do %>
  <%= form_with url: list_admin_users_path,
    method: :get,
    data: { controller: "search-form", search_form_target: "form", turbo_frame: "users", 'turbo-method': "get" } do |form|
  %>
    <div class="flex flex-col pl-5">
      <div class="mb-5 flex text-midnight-800">
        <%= form.text_field :name,
          placeholder: t('user.search_by_name'),
          class: "p-2 text-sm",
          autocomplete: "off",
          data: { action: "input->search-form#search" }
        %>
        <%= heroicon 'magnifying-glass', options: {class: 'w-5 h-5 ml-2 my-auto'} %>
      </div>
    </div>
  <% end %>
<% end %>
